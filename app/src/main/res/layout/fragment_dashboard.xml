<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@color/primaryColor">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Is ToDone?"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/poppinsbold"
        android:textSize="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/dashteks_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToDone: A To-Do List App That Helps You Get Things Done"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/poppinssemibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToDone is a to-do list app that helps you organize and complete your tasks more easily and effectively. The app has a comprehensive set of features that are easy to use, making it a good fit for everyone, from students and professionals to stay-at-home parents."
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/poppinsregular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="15dp"
        android:textSize="36dp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/poppinsbold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToDone, the to-do list app that helps you organize and complete your tasks more easily and effectively, offers a comprehensive set of features designed to cater to everyone's needs. With ToDone, you can effortlessly add, edit, and delete tasks, ensuring your to-do list remains up-to-date and manageable."
        android:layout_marginTop="360dp"
        android:layout_marginLeft="15dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/poppinsregular" />

</FrameLayout>